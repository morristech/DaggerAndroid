<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zoftino.daggerandroid.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Expense"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/head" />

    <TextView
    android:id="@+id/exptype_l"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Expense Type"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/head"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/exptype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/exptype_l"
        app:layout_constraintLeft_toRightOf="@+id/exptype_l"
        android:layout_marginLeft="8dp" />
    <TextView
        android:id="@+id/expdetails_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense Details"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/exptype_l"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/expdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/expdetails_l"
        app:layout_constraintLeft_toRightOf="@+id/expdetails_l"
        android:layout_marginLeft="8dp" />
    <TextView
        android:id="@+id/expamount_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense Amount"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/expdetails_l"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/expamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/expamount_l"
        app:layout_constraintLeft_toRightOf="@+id/expamount_l"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/add_exp_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Expense"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/expamount_l"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="addExpense"/>

</android.support.constraint.ConstraintLayout>
